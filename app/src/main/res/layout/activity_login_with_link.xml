<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tech.LoginWithLink">
    <LinearLayout
        android:id="@+id/lytTechUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLogIn"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_field"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/edtlinkUsernameTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:layout_gravity="right"
            android:background="@color/trans"
            android:hint="@string/userName"
            android:textColor="@color/off"
            android:textSize="15sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/lytTechUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lytAdminEmailLogIn"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_field"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/edtTechEmailSignInLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:layout_gravity="right"
                android:background="@color/trans"
                android:hint="@string/email"
                android:textColor="@color/off"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytAdminPassLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytAdminEmailLogIn"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_field"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/ic_pass" />

            <EditText
                android:id="@+id/edtPassLoginTechLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:enabled="false"
                android:layout_gravity="right"
                android:background="@color/trans"
                android:hint="@string/pass"
                android:textColor="@color/off"
                android:textSize="15sp" />

        </LinearLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogInTech"
            android:layout_below="@id/lytAdminPassLogin"
            android:background="@drawable/btn_background"
            android:text="@string/login"
            android:layout_marginRight="20dp"/>




        <TextView
            android:id="@+id/titleLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/btnLogInTech"
            android:weightSum="5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donthaveAcc"
                android:layout_gravity="center"
                android:gravity="right"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/trans"
                android:text="@string/signIn"
                android:id="@+id/btnSignInTechLink"
                android:textColor="@color/design_default_color_primary"/>
        </LinearLayout>

    </RelativeLayout>
